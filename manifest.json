{
  "manifest_version": 3,
  "name": "TabMasque",
  "version": "1.0",
  "description": "Customize tab title and favicon for popular websites.",
  "permissions": ["scripting", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TabMasque"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
